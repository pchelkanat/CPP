#include "stdafx.h"
#include <iostream>
#include <iomanip>

using namespace std;
   
const int N=10000;
int n,a[N][N];
int main() { 
	setlocale(LC_ALL, "Russian");
	int i,j;
	cout<<"Введите размер n квадратной матрицы\n";
	cin>>n;			
	//создание
    for (i = 0; i < n; i++)
        for (j = 0; j < n; j++)
                a[i][j] = rand() % 11;
	//вывод
	for (i = 0; i < n; i++){
        for (j = 0; j < n; j++) cout << setw(3) << a[i][j] << " ";
       cout << endl;}
	//замена
    for (i = 1; i < n; i++)
        for (j = 0; j < i; j++) swap(a[i][j], a[n-1-j][i]);
		
	//вывод
    cout<<"\n";
	for (i = 0; i < n; i++){
		for (j = 0; j < n; j++) cout << setw(3) << a[i][j] << " ";
		cout << endl;}
system ("pause");
return 0;}
